import java.util.Scanner;

/**
 *
 * @author max
 */
public class QuoteOuput {
    public static void main(String[] args)
    {
        
        Scanner scan = new Scanner(System.in);
        System.out.println("Enter your quote:");
        String quoteString = scan.nextLine();
        System.out.println("Enter your name:");
        String authorString = scan.nextLine();
        
	Quotation quote = new Quotation(quoteString, authorString);		
        
        //use outputQuote method of both instances to output to console
        System.out.println(quote.outputQuote());


    }
}
