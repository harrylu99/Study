public class StringName {
   public static void main(String[] args)
   {
       String first = "Seth";
       String middle = "George";
       String last = "Hall";
       
       System.out.printf("Full Name is: %s %s %s \n",first,middle,last);//using three %s to print out the string name
       System.out.printf("Initialed Name: %c.%c. %s \n",first.charAt(0),middle.charAt(0),last);//%c. change the string type(variable) and use first.charAt(0) to print out the first letter
       System.out.println("First Name is spelt like:");// use a loop to print out the spelt 
       for(int i=0;i<first.length();i++)
           System.out.println(first.charAt(i));
       System.out.printf("You have %d total letters in your full name \n",(first.length()+middle.length()+last.length()));
       // use %d to calculate the total letter number
       

   }  
}
